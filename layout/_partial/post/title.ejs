<% if (post.link){ %>
	<h1 itemprop="name" class="blog-post-title">
<a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title || '(no title)' %></a>
</h1>
<% } else { %><% if (index){ %>
								<h1 itemprop="name" class="blog-post-title">
									<a class="<%= class_name %>" href="<%- url_for(post.path) %>">
										<%= post.title || '(no title)' %>
									</a>
								</h1>
								<% } else { %>
						<h1 class="<%= class_name %> blog-post-title" itemprop="name">
							<%= post.title || '(no title)' %>
						</h1>
						<% } %><% } %>